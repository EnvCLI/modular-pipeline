#!/usr/bin/env bash
set -euo pipefail
STAGE_NAME="cleanup"

# common
LOCAL_PATH=${BASH_SOURCE%/*}
source "$LOCAL_PATH/pipeline-common"

# main
function main()
{
  echo "-> nothing to remove ..."
}

# entrypoint
case "${1:-}" in
  help)
    echo "Stage - CleanUp"
    echo "Run cleanup tasks to remove obsolete files generated by the pipeline"
    echo ""
    echo "Environment:"
    echo "* DEBUG: Can be set to true to enable debugging"
    ;;
  *)
    _log_message "Running action [$STAGE_NAME]" "INFO"
    _prepare
    _run_hook "pre-$STAGE_NAME"
    main "$@"
    _run_hook "post-$STAGE_NAME"
;;
esac
