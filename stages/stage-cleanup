#!/usr/bin/env bash
set -euo pipefail
STAGE_NAME="cleanup"

# common
LOCAL_PATH=${BASH_SOURCE%/*}
source "$LOCAL_PATH/action-common"

# main
function main()
{
  echo "-> nothing to remove ..."
}

# entrypoint
case "${1:-}" in
  help)
    echo "Stage - CleanUp"
    echo "Run cleanup tasks to remove obsolete files generated by the pipeline"
    echo ""
    echo "Environment:"
    echo "* DEBUG: Can be set to true to enable debugging"
    ;;
  *)
    echo "Running stage [$STAGE_NAME]"
    act-common-prepare
    act-common-hook "pre-$STAGE_NAME"
    main "$@"
    act-common-hook "post-$STAGE_NAME"
;;
esac
