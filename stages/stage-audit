#!/usr/bin/env bash
set -euo pipefail
STAGE_NAME="audit"

# common
LOCAL_PATH=${BASH_SOURCE%/*}
source "$LOCAL_PATH/pipeline-common"

# main
function main()
{
  act-log-message "No auditing tools supported yet." "INFO"
}

# entrypoint
case "${1:-}" in
  help)
    echo "Stage - Audit"
    echo "Run auiting tools to find license / security / etc. issues."
    echo ""
    echo "Environment:"
    echo "* DEBUG: Can be set to true to enable debugging"
    ;;
  *)
    _log_message "Running action [$STAGE_NAME]" "INFO"
    _prepare
    _run_hook "pre-$STAGE_NAME"
    main "$@"
    _run_hook "post-$STAGE_NAME"
;;
esac
